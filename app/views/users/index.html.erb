<div class="page-header">
  <h1>All companies</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Company</th>
      <th>Location</th>
      <th>Email</th>
      <th>Member for</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.company, user_path(user) %></td>
        <td><%= user.location %></td>
        <td><%= user.email %></td>
        <td><%= time_ago_in_words(user.created_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if !signed_in? %>
<%= link_to "Employer Sign Up", signup_path, class: "btn btn-large  btn-primary" %>
<% end %>