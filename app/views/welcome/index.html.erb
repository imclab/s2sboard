 <% if !signed_in?	%>
  <div class="row">
    <div class="span5">
      <h2>Welcome to the end <br> of your job search</h2>
      <div class = "lead">Find internships and entry-level <br> positions at amazing startups</div>
    </div>
    <div class="span5">
      <img src="/assets/header.png" alt="Startups2Students"/>
    </div>
  </div>
  <div class="row">
    <div class="span3"></div>
      <div class="span4"><%= link_to  "Employer Sign up", signup_path, class: "btn btn-large btn-primary splash-button"%></div>
      <div class="span3"></div>
    </div>
    <% end %>
  <h4>Available Positions</h4>
  <%- model_class = Job -%>
  <table class="table table-striped ">
  <thead>
    <tr>

      <th><%= sortable 'name'%></th>
      <th><%= sortable 'job_type', 'Type' %></th>
      <th><%= sortable 'company' %></th>
      <th><%= sortable 'location' %></th>
      <th><%= sortable 'created_at', 'Posted' %></th>
      <th><%= sortable 'opening' , 'Openings' %></th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
     <tr>      <!-- onmouseover="this.style.cursor='pointer';" onclick="location.href='<%=job_url(job)%>';" style="cursor: pointer;" -->
        <td><%= link_to job.name, job_url(job) %></td>
        <td><%= job.job_type %></td>
        <td><%= link_to job.company, user_url(job.user_id) %></td>
        <td><%= job.location %></td>
        <td><%= time_ago_in_words(job.created_at)%> ago</td>
        <td><%= job.opening%></td>
      </tr>
    <% end %>
  </tbody>
</table>

