<div>
  <h3><%= @job.name %></h3>
  <div class= "well">
    <h4>Location: <%= @job.location %></h4>
    <h4>Description:<br> <br> <%= @job.description %></h4><br>
    <h4>To Apply: <%= @job.contact %> </h4>
  </div>
</div>

<% if signed_in? && owned_by_user?(current_user, @job) %>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              jobs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_job_path(@job), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              job_path(@job),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure you want to delete this job ?')) },
              :class => 'btn btn-danger' %>
</div>
<% end %>